# Synx Configuration
# Copy this file to .env and customize the values

# Application Settings
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO

# MCP Server Configuration
# Transport: stdio or streamable_http
MCP_TRANSPORT=stdio
# Host and port for streamable_http transport (only used when MCP_TRANSPORT=streamable_http)
# For Wasmer deployment, use: HOST=0.0.0.0 and PORT=8080
HOST=0.0.0.0
PORT=10000
